<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alphae.tictactoe.MainActivity"
    android:weightSum="5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Player X's Turn"
            android:id="@+id/winnerBoard"
            android:textColor="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp" />
    </LinearLayout>
    <TableLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow android:layout_weight="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/zero"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">

                <TextView
                    android:id="@+id/one"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/two"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:textColor="@color/white" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/three"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/four"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/five"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/six"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/seven"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey">
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="pressed"
                    android:id="@+id/eight"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/white"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:soundEffectsEnabled="true"
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/white"
            android:text="RESET ?"
            android:textColor="@color/playerO"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>